{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2019",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "outDir": "dist",
    "paths": {
      "@globalTypes/*": ["../../types/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"],
}