generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model incedents {
  id                     Int      @id @default(autoincrement())
  location               String
  area_codes             Json
  start_time             DateTime
  end_time               DateTime
  planned                Boolean
  description            String
  additional_information String?
  service                service  @relation(fields: [serviceId], references: [id])

  createdAt DateTime @default(now())
  serviceId Int

  @@index([id])
}

model service {
  id    Int    @id @default(autoincrement())
  name  String
  token String

  incedents incedents[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}
